<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Electronics Store</title>

    <link rel="stylesheet" href="/resources/css/home.css">
    <link rel="stylesheet" href="/resources/css/productCard.css">
    {% if stylesheets %}
    {% for sheet in stylesheets %}
    <link rel="stylesheet" href="{{ sheet.url }}">
    {% endfor %}
    {% endif %}
</head>
<body>
    {{ include('/elements/navbar.twig') }}
    <div class="banner-container">
        <div class="banner-slides">
            <div class="slide"><img src="/storage/banners/banner-1.png" alt="Banner 1"></div>
            <div class="slide"><img src="/storage/banners/banner-2.png" alt="Banner 2"></div>
            <div class="slide"><img src="/storage/banners/banner-3.jpg" alt="Banner 3"></div>
        </div>
        <button class="banner-btn left" onclick="prevSlide()">&#10094;</button>
        <button class="banner-btn right" onclick="nextSlide()">&#10095;</button>
    </div>

    <section class="categories-section">
        <div class="categories-container">
            {% if categories %}
                {% for category in categories %}

                    {% set image = (category.image)? category.image : defaultCategory %}
                    <a href="/products?category={{ category.id }}">
                        <!-- TODO: the link -->
                        <div class="category-card">
                            <img src="{{ image }}" class="category-image">
                            <p class="category-title">{{ category.name }}</p>
                        </div>
                    </a>
                {% endfor %}
            {% endif %}

            <a href="/products">
                <div class="category-card">
                    <img src="/storage/other/view-all.svg" class="category-image">
                    <p class="category-title">View All Products</p>
                </div>
            </a>

        </div>
    </section>

    <section class="products-section">
        <h2>New Products</h2>
        <div class="product-cards">
            {% for product in products %}
                {{ include('/elements/customerProductCard.twig', {product: product}) }}
            {% endfor %}
        </div>
    </section>

    <!-- Top Selling Products Section -->
    <section class="products-section">
        <h2>Top Selling Products</h2>
        <ul class="product-cards">
            <li class="product-card">
                <img src="https://btech.com/media/catalog/product/2/8/28-l-solo_1.jpg" alt="Product 2">
                <div class="info">
                    <h3>Product Title 1</h3>
                    <div class="rating">
                        ★★★★☆
                    </div>
                    <p class="price">$199.99</p>
               </div>
            </li>
            <li class="product-card">
                <img src="https://btech.com/media/catalog/product/2/8/28-l-solo_1.jpg" alt="Product 2">
                <div class="info">
                    <h3>Product Title 1</h3>
                    <div class="rating">
                        ★★★★☆
                    </div>
