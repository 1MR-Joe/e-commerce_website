<div class="product-card">
    <img class="product-img" src="{{ product.photo }}" alt="Product">
    <div class="info">
        <h4 class="product-name">{{ product.name }}</h4>
        <div class="rating">
            ★★★★☆
        </div>
        <p class="price">${{ product.unitPriceCents / 100 }}</p>
    </div>
</div>